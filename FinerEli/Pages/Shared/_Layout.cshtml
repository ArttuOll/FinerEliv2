<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <title>@ViewData["Title"] - FinerEli</title>
    <link rel="stylesheet" href="~/css/output.css" asp-append-version="true"/>
</head>
<body>
<header>
    <nav class="flex flex-row px-2 space-x-4 items-baseline">
        <a asp-area="" asp-page="/Index" class="font-serif font-semibold text-4xl">FinerEli</a>
        <ul class="flex flex-row space-x-4">
            <li class="nav-item">
                <a class="nav-link text-dark" asp-area="" asp-page="/Index">Haku</a>
            </li>
            <li class="nav-item">
                <a class="nav-link text-dark" asp-area="" asp-page="/About">Tietoa</a>
            </li>
        </ul>
    </nav>
</header>
<main>
    @RenderBody()
</main>

<footer class="space-y-1">
    <p>
        &copy; 2023
    </p>
    <p>Arttu Olli</p>
    <p>
        <a href="">GitHub</a>
    </p>
</footer>

<script src="~/js/site.js" asp-append-version="true"></script>

@await RenderSectionAsync("Scripts", false)
</body>
</html>